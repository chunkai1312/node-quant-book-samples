{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/scraper/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/scraper/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/scraper",
  "projects": {
    "scraper": {
      "type": "application",
      "root": "apps/scraper",
      "entryFile": "main",
      "sourceRoot": "apps/scraper/src",
      "compilerOptions": {
        "tsConfigPath": "apps/scraper/tsconfig.app.json"
      }
    },
    "monitor": {
      "type": "application",
      "root": "apps/monitor",
      "entryFile": "main",
      "sourceRoot": "apps/monitor/src",
      "compilerOptions": {
        "tsConfigPath": "apps/monitor/tsconfig.app.json"
      }
    }
  }
}